<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="estate_property_offer_list_view" model="ir.ui.view">
            <field name="name">estate.property.offer.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list decoration-danger="status == 'Refused'"
                    decoration-success="status == 'Accepted'" editable="bottom">
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <button name="action_accept" string="Accept" type="object" icon="fa-check"
                        invisible="status in ['Accepted','Refused']" />
                    <button name="action_refuse" string="Refuse" type="object" icon="fa-close"
                        invisible="status in ['Accepted','Refused']" />
                </list>
            </field>
        </record>

        <record id="estate_property_offer_form_view" model="ir.ui.view">
            <field name="name">estate.property.offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Property Offer Form">
                    <sheet>
                        <group>
                            <field name="price" />
                            <field name="partner_id" />
                            <field name="validity" />
                            <field name="date_deadline" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
            <field name="context">{
                'default_property_type_id': active_id,
                'search_default_property_type_id': active_id
                }</field>
        </record>
    </data>
</odoo>